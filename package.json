{
  "name": "shopt",
  "version": "1.0.1",
  "description": "The smart shopping list",
  "main": "index.js",
  "watch": {
    "cp:src": {
      "patterns": [
        "source"
      ],
      "extensions": "js,html,css",
      "ignore": "",
      "quiet": true
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "test": "mocha",
    "clean": "mkdir -p www/js && rm -r www/*",
    "cp:jquery": "cp node_modules/jquery/dist/jquery.min.js www/js/",
    "cp:moment": "cp node_modules/moment/min/moment.min.js www/js/",
    "cp:vue": "cp node_modules/vue/dist/vue.min.js www/js/",
    "cp:materialize": "cp -r node_modules/materialize-css/dist/* www/",
    "cp:animate": "cp node_modules/animate.css/animate.min.css www/css/",
    "cp:chartjs": "cp node_modules/chart.js/dist/Chart.min.js www/js/",
    "cp:zenscroll": "cp node_modules/zenscroll/zenscroll-min.js www/js/",
    "cp:src": "cp -r source/* www/",
    "cp:icons": "cp -r icons www/",
    "build": "npm run clean && npm run cp:src && npm run cp:icons && npm run cp:jquery && npm run cp:vue && npm run cp:moment && npm run cp:materialize && npm run cp:animate && npm run cp:chartjs && npm run cp:zenscroll",
    "release": "cordova run android --release -- --keystore=keystore/shopt-android-keystore.jks --alias='Shopt Playstore Key'"
  },
  "author": "Wesley Werner",
  "license": "GPL-3.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.8"
  },
  "dependencies": {
    "animate.css": "^3.5.2",
    "chart.js": "^2.5.0",
    "materialize-css": "^0.98.0",
    "moment": "^2.17.1",
    "vue": "^2.1.10",
    "zenscroll": "^3.3.0",
    "jquery": "2.1.1"
  }
}
