{
  "name": "shopt",
  "version": "1.0.1",
  "description": "The smart shopping list",
  "main": "index.js",
  "watch": {
    "cp:src": {
      "patterns": [
        "source"
      ],
      "extensions": "js,html",
      "ignore": "",
      "quiet": true
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "test": "mocha",
    "clean": "mkdir -p dist/js && rm -r dist/*",
    "cp:moment": "cp node_modules/moment/min/moment.min.js dist/js/",
    "cp:vue": "cp node_modules/vue/dist/vue.min.js dist/js/",
    "cp:materialize": "cp -r node_modules/materialize-css/dist/* dist/",
    "cp:animate": "cp node_modules/animate.css/animate.min.css dist/css/",
    "cp:chartjs": "cp node_modules/chart.js/dist/Chart.min.js dist/js/",
    "cp:zenscroll": "cp node_modules/zenscroll/zenscroll-min.js dist/js/",
    "cp:src": "cp -r source/* dist/",
    "build": "npm run clean && npm run cp:src && npm run cp:vue && npm run cp:moment && npm run cp:materialize && npm run cp:animate && npm run cp:chartjs && npm run cp:zenscroll"
  },
  "author": "Wesley Werner",
  "license": "GPL-3.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "npm-watch": "^0.1.8"
  },
  "dependencies": {
    "animate.css": "^3.5.2",
    "chart.js": "^2.5.0",
    "materialize-css": "^0.98.0",
    "moment": "^2.17.1",
    "vue": "^2.1.10",
    "zenscroll": "^3.3.0"
  }
}
